{
  "name": "@opencode-observability/server",
  "version": "1.0.0",
  "description": "Bun/TypeScript server for OpenCode observability",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest"
  }
}